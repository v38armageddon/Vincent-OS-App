<Page
    x:Class="Vincent.OS.App.Pages.DesktopPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Vincent.OS.App.Pages"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="Black">

  <Grid>
    <!--Wallpaper should be placed at the first place, otherwise, layer problems-->
    <Image Source="/Assets/Wallpapers/dev_test.jpg" Stretch="UniformToFill"/>
    <!--Top content start here-->
    <Rectangle Fill="DarkGray" Opacity="0.45" VerticalAlignment="Top" Height="46"/>
    <TextBlock x:Name="dateTimeText" Foreground="White" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,10,0,0"/>
    <CalendarView x:Name="calendarView" SelectionMode="Single" IsGroupLabelVisible="True" IsOutOfScopeEnabled="True" 
              VerticalAlignment="Top" Margin="0,51,0,0" Visibility="Collapsed"/>
    <Button x:Name="logoutButton" Margin="0,5,5,0" Background="Transparent" BorderBrush="Transparent" Click="logoutButton_Click"
            HorizontalAlignment="Right" VerticalAlignment="Top" Height="25" Width="25">
      <Button.Content>
        <PersonPicture ProfilePicture="/Assets/Shared/user.png" Height="36" Margin="-13,-6,-10,-7"/>
      </Button.Content>
    </Button>
    <!--Main content start here-->
    <StackPanel Margin="0,46,0,46" Orientation="Horizontal">
      <Button x:Name="startMenuButton" Margin="5,0,0,0" Background="Transparent" BorderBrush="Transparent">
        <Button.Content>
          <Image Source="/Assets/Shared/Software/executor.png" Height="36"/>
        </Button.Content>
      </Button>
      <Button x:Name="fileExplorerButton" Margin="5,0,0,0" Background="Transparent" BorderBrush="Transparent">
        <Button.Content>
          <Image Source="/Assets/Shared/Software/files.png" Height="36"/>
        </Button.Content>
      </Button>
    </StackPanel>
    <!--Bottom content start here-->
    <Rectangle Fill="DarkGray" Opacity="0.45" VerticalAlignment="Bottom" Height="46"/>
  </Grid>
</Page>
